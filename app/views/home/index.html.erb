<% if user_signed_in? %>
  <%= link_to new_post_path, class: "btn btn-primary my-3 w-100" do %>
    <i class="bi bi-plus-square"></i><span> Новый пост</span>
  <% end %>
<% end %>
<% @posts.each do |post| %>
  <div class="card mb-3">
    <div class="card-header">
      <%= post.category %>
    </div>
    <div class="card-body">
      <h5 class="card-title"><%= post.title %></h5>
      <p class="card-text"><%= post.body %></p>
      <%= link_to "Читать далее", post_path(post), class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
<div class="row my-5">
  <div class="col-2">
  </div>
  <div class="col-10">
    <div class="row">
      <div class="col"></div>
      <div class="col">
        <%= paginate @posts %>
      </div>
      <div class="col"></div>
    </div>
  </div>
</div>
