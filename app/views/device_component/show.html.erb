<%= render 'shared/flash_alert' %>
<div class="row my-3">
  <div class="col p-4 shadow rounded">
    <div class="row text-center">
      <h1>Компонент</h1>
      <hr class="divider">
    </div>
    <p>
      <span>
        <strong>S/N компонента: </strong>
        <%= @device_component.serial_id %>
      </span>
    </p>
    <p>
      <span>
        <strong>Название компонента: </strong>
        <%= @device_component.name %>
      </span>
    </p>
    <p>
      <span>
        <strong>Модель: </strong>
        <%= @device_component.device_model.name %>
      </span>
    </p>
    <p>
      <span>
        <strong>Диапазон измерений: </strong>
        <%= @device_component.measurement_min %> ÷ <%=
        @device_component.measurement_max %>, <%=
        @device_component.measuring_unit %>
      </span>
    </p>
    <p>
      <span>
        <strong>Описание: </strong>
        <%= @device_component.description %>
      </span>
    </p>
    <div class="row px-0" style="max-width:650px; min-width:600px">
      <div class="col-2">
        <%= link_to "Изменить", edit_device_component_path(@device_component), class: "btn btn-primary"%>
      </div>
      <div class="col-2">
        <%= button_to "Удалить", device_component_path(@device_component), method: :delete, class: "btn btn-danger"%>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col p-4 shadow rounded">
    <div class="row text-center">
      <h1>Модель</h1>
      <hr class="divider">
    </div>
    <p>
      <span>
        <strong>Название модели: </strong>
        <%= @device_component.device_model.name %>
      </span>
    </p>
    <p>
      <span>
        <strong>Группа прибора: </strong>
        <%= @device_component.device_model.measurement_group.name %>
      </span>
    </p>
    <p>
      <span>
        <strong>Класс прибора: </strong>
        <%= @device_component.device_model.measurement_class.name %>
      </span>
    </p>
    <p>
      <span>
        <strong>Класс безопасности: </strong>
        <%= @device_component.device_model.safety_class %>
      </span>
    </p>
    <p>
      <span>
        <strong>Класс точности: </strong>
        <%= @device_component.device_model.accuracy_class %>
      </span>
    </p>
    <p>
      <span>
        <strong>Чувствительность: </strong>
        <%= @device_component.device_model.measurement_sensitivity %>
      </span>
    </p>
    <p>
      <span>
        <strong>Диапазон измерений: </strong>
        <%= @device_component.device_model.measurement_min %> ÷ <%=
        @device_component.device_model.measurement_max %>, <%=
        @device_component.device_model.measuring_unit %>
      </span>
    </p>
    <p>
      <span>
        <strong>Документациця: </strong>
        <%= link_to device_index_path do %>
          <i class="bi bi-file-earmark-arrow-down-fill"></i>
        <% end %>
      </span>
    </p>
  </div>
</div>
