<div class="row">
  <div class="col-2">
    <%= search_form_for(@query, url:device_index_path, method: :get, class: "mb-3 shadow-lg rounded") do |f| %>
      <%= f.search_field :serial_id_cont, class: 'form-control', placeholder: 'Поиск по S/N' %>
    <% end %>
    <div class="list-group shadow-lg">
      <a href="#" class="list-group-item list-group-item-action active" aria-current="true">
        The current link item
      </a>
      <a href="#" class="list-group-item list-group-item-action">A second link item</a>
      <a href="#" class="list-group-item list-group-item-action">A third link item</a>
      <a href="#" class="list-group-item list-group-item-action">A fourth link item</a>
      <a class="list-group-item list-group-item-action disabled">A disabled link item</a>
    </div>
    <%= link_to "Добавить", new_device_path, class: "btn btn-primary my-3 w-100 shadow-lg" %>
  </div>
  <div class="col-10 shadow-lg rounded">
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">Таб. №</th>
          <th scope="col">Сер. №</th>
          <th scope="col">Модель</th>
          <th scope="col">Год выпуска</th>
          <th scope="col">Год ввода</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <% @devices.each do |device| %>
          <tr>
            <th scope="row"><%= device.tabel_id %></th>
            <td><%= device.serial_id %></td>
            <td><%= device.device_model.name %></td>
            <td><%= device.year_of_production %></td>
            <td><%= device.year_of_commissioning %></td>
            <td>
              <%= link_to edit_device_path(device) do %>
                <i class="bi bi-pencil-fill"></i>
              <% end %>
              <%= link_to device_path(device) do %>
                <i class="bi bi-eye-fill"></i>
              <% end %>
              <%= link_to edit_device_path(device) do %>
                <i class="bi bi-bucket-fill"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="row my-5">
  <div class="col-2">
  </div>
  <div class="col-10">
    <div class="row">
      <div class="col-8">
        <%= paginate @devices %>
      </div>
      <div class="col-4">
        <%= page_entries_info @devices %>
      </div>
    </div>
  </div>
</div>
