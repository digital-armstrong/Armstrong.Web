<div class="row my-3 d-flex">
  <div class="col p-4 shadow rounded d-flex flex-column align-items-center">
    <div class="row text-center w-100">
      <h1>Регистрационные группы</h1>
      <hr class="divider">
    </div>
    <p>
      <span>
        <strong>Название: </strong>
        <%= @device_reg_group.name %>
      </span>
    </p>
    <div class="row px-0" style="max-width:650px; min-width:600px; display:flex; justify-content:center">
      <div class="col-2">
        <%= link_to "Изменить", edit_device_reg_group_path(@device_reg_group), class: "btn btn-primary"%>
      </div>
      <div class="col-2">
        <%= button_to "Удалить", device_reg_group_path(@device_reg_group), method: :delete, class: "btn btn-danger"%>
      </div>
    </div>
  </div>
</div>