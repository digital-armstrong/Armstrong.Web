<%= render 'shared/device_bread', selected: "device_reg_group" %>
<div class="row">
  <div class="col-2">
    <div class="accordion mb-3" id="accordionFilter">
      <div class="accordion-item">
        <h2 class="accordion-header" id="headingFilter">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFilter" aria-expanded="true" aria-controls="collapseFilter">
            Фильтрация
          </button>
        </h2>
        <div id="collapseFilter" class="accordion-collapse collapse shadow" aria-labelledby="headingFilter" data-bs-parent="#accordionFilter">
          <%= search_form_for(@query, url:device_reg_group_index_path, method: :get, class: "rounded accordion-body") do |f| %>
            <%= f.label :name, class: "mb-2" %>
            <%= f.search_field :name_cont, class:"form-control", placeholder:"Название" %>
            <%= f.submit "Применить", class: 'btn btn-primary w-100 mt-4'%>
          <% end %> 
        </div>
      </div>
    </div>
    <div>
      <p>Добавление:</p>
      <%= render partial: "shared/device_reg_group_form", locals: { path: device_reg_group_index_path } %>
    </div>
  </div>
  <div class="col-10 shadow rounded">
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">Название</th>
        </tr>
      </thead>
      <tbody>
        <% @device_reg_groups.each do |device_reg_group| %>
          <tr>
            <td><%= device_reg_group.name %></td>
            <td class="border">
              <div class="d-flex">
                <%= link_to edit_device_reg_group_path(device_reg_group.id), class: "btn" do %>
                  <i class="bi bi-pen"></i>
                <% end %>
                <%= button_to device_reg_group_path(device_reg_group.id), method: :delete, class: "btn" do %>
                  <i class="bi bi-trash"></i>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
  </div>
<div class="row my-5">
  <div class="col-2">
  </div>
  <div class="col-10">
    <div class="row">
      <div class="col"></div>
      <div class="col">
        <%= paginate @device_reg_groups %>
      </div>
      <div class="col"></div>
    </div>
  </div>
</div>
