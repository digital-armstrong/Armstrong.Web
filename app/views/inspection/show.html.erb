<% provide :page_title, "Инспекция #{@inspection.id}" %>
<%= render 'shared/flash_alert' %>
<div class="row mx-0 my-3">
  <div class="col p-4 shadow rounded">
    <div class="row text-center">
      <h1>Инспекция</h1>
      <hr class="divider">
    </div>
    <p>
      <span>
        <strong>Цель: </strong>
        <%= t(@inspection.type_target) %>
      </span>
    </p>
    <p>
      <span>
        <strong>Состояние: </strong>
        <%= t(@inspection.state) %>
      </span>
    </p>
    <p>
      <span>
        <strong>Создатель: </strong>
        <%= @creator.last_name %>
      </span>
    </p>
    <% if @inspection.performer.present? %>
      <p>
        <span>
          <strong>Выполняющий: </strong>
          <%= @performer.last_name %>
        </span>
      </p>
    <% end %>
    <p>
      <span>
        <strong>Заключение: </strong>
        <%= @inspection.conclusion %>
      </span>
    </p>
    <p>
      <span>
        <strong>Дата заключения: </strong>
        <% unless @inspection.conclusion_date.nil? %>
          <%= formatted_date(@inspection.conclusion_date, :default) %>
        <% end %>
      </span>
    </p>
    <div class="d-flex w-50 px-0" style="flex-wrap:wrap">
      <div class="me-2">
        <%= link_to "Изменить", edit_inspection_path(@inspection), class: "btn btn-primary"%>
      </div>
      <div>
        <%= button_to "Удалить", inspection_path(@inspection), method: :delete, class: "btn btn-danger"%>
      </div>
    </div>
  </div>
  <div class="col p-4 ms-2 shadow rounded">
    <div class="row text-center">
      <h1>Прибор</h1>
      <hr class="divider">
    </div>
    <p>
      <span>
        <strong>Инв. №: </strong>
        <%= @inspection.device.inventory_id %>
      </span>
    </p>
    <p>
      <span>
        <strong>Таб. №: </strong>
        <%= @inspection.device.tabel_id %>
      </span>
    </p>
    <p>
      <span>
        <strong>S/N: </strong>
        <%= @inspection.device.serial_id %>
      </span>
    </p>
    <p>
      <span>
        <strong>Дата выпуска: </strong>
        <%= @inspection.device.year_of_production %>
      </span>
    </p>
    <p>
      <span>
        <strong>Дата ввода в эксплуатацию: </strong>
        <%= @inspection.device.year_of_commissioning %>
      </span>
    </p>
    <p>
      <span>
        <strong>Дата последней успешной поверки: </strong>
        <%= @inspection.device.last_successful_inspection %>
      </span>
    </p>
    <p>
      <span>
        <strong>Реестр. группа: </strong>
        <%= @inspection.device.device_reg_group.name %>
      </span>
    </p>
  </div>
</div>
