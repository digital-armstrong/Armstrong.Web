<%= simple_form_for @post, as: :post, url: path, data: { turbo: false }, class: "form-group row" do |f| %>
  <%= f.input :title, placeholder: t(".title") %>
  <%= f.input :body, placeholder: t(".body") %>

  <div>
    <%= f.button :submit, t("b_save"), class: "btn btn-primary" %>
    <%= f.button :submit, t("b_back"), formaction: home_index_path, formmethod: "get" %>
  </div>
<% end %>
