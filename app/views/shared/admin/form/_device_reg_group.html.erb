<%= simple_form_for device_reg_group, as: :device_reg_group, url: path, class: "form-group row" do |f| %>
  <div class="row">
    <div class="col">
      <%= f.input :name, placeholder: 'Название р. группы', input_html: {:tabindex => 1}%>
    </div>
  </div>
  <div>
    <%= f.button :submit, "Сохранить", class: "btn btn-primary" %>
    <%= render 'shared/modal_button_close' %>
  </div>
<% end %>
