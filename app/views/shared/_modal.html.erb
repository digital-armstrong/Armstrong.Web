<div data-modal-target="container"
     class="d-none position-fixed top-50 start-50 overflow-auto translate-middle align-items-center justify-content-center"
     style="z-index: 9999; " id="modal">
  <div class="max-w-lg max-h-screen w-full relative">
    <div class="m-1 bg-white rounded shadow-lg">
      <div class="px-4 py-2 text-center">
      <div class="row">
        <div class="col-2">
        </div>
        <div class="col-8">
          <h3 id="modal-title" class="text-lg leading-6 font-medium text-gray-900"></h3>
        </div>
        <div class="col-2 d-flex justify-content-end">
          <button id="close-button" class="btn btn-light rounded" data-action="click->modal#close">
            <i class="bi bi-x-lg"></i>
          </button>
        </div>
        </div>
      </div>
      <div id="modal-body" class="px-4 py-2"></div>
    </div>
  </div>
</div>
