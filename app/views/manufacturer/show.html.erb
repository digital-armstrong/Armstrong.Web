<div class="row my-3 d-flex">
  <div class="col p-4 shadow rounded d-flex flex-column align-items-center">
    <div class="row text-center w-100">
      <h1>Производитель</h1>
      <hr class="divider">
    </div>
    <p>
      <span>
        <strong>Производитель: </strong>
        <%= @manufacturer.name %>
      </span>
    </p>
    <p>
      <span>
        <strong>Адрес: </strong>
        <%= @manufacturer.adress %>
      </span>
    </p>
    <p>
      <span>
        <strong>Телефон: </strong>
        <%= @manufacturer.phone %>
      </span>
    </p>
    <p>
      <span>
        <strong>E-mail: </strong>
        <%= mail_to @manufacturer.email %>
      </span>
    </p>
    <p>
      <span>
        <strong>Сайт: </strong>
        <%= link_to "#{@manufacturer.site_url}", @manufacturer.site_url, target: :blank %>
      </span>
    </p>
    <div class="row px-0" style="max-width:650px; min-width:600px; display:flex; justify-content:center">
      <div class="col-2">
        <%= link_to "Изменить", edit_manufacturer_path(@manufacturer), class: "btn btn-primary"%>
      </div>
      <div class="col-2">
        <%= button_to "Удалить", manufacturer_path(@manufacturer), method: :delete, class: "btn btn-danger"%>
      </div>
    </div>
  </div>
</div>